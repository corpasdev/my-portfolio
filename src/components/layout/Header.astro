---
import NavBar from '../common/NavBar.astro';
---

<header class="site-header">
  <div class="header-container">
    <div class="logo">
      <a href="/">
        <span class="logo-text">Brandon Corpas</span>
      </a>
    </div>
    <NavBar />
  </div>
</header>

<style>
  .site-header {
    padding: 1rem 0;
    border-bottom: 1px solid #eaeaea;
    background-color: white;
  }
  
  .header-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1.5rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  
  .logo {
    font-size: 1.5rem;
    font-weight: 700;
  }
  
  .logo a {
    text-decoration: none;
    color: #333;
  }
</style> 