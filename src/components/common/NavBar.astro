---
const navItems = [
  { label: 'Inicio', url: '/' },
  { label: 'Proyectos', url: '/proyectos' },
  { label: 'Sobre m√≠', url: '/sobre-mi' },
  { label: 'Contacto', url: '/contacto' }
];
---

<nav class="main-nav">
  <ul class="nav-list">
    {navItems.map(item => (
      <li class="nav-item">
        <a href={item.url} class="nav-link">{item.label}</a>
      </li>
    ))}
  </ul>
</nav>

<style>
  .main-nav {
    display: flex;
    align-items: center;
  }
  
  .nav-list {
    display: flex;
    list-style: none;
    gap: 2rem;
    margin: 0;
    padding: 0;
  }
  
  .nav-link {
    text-decoration: none;
    color: #333;
    font-weight: 500;
    position: relative;
    transition: color 0.3s ease;
  }
  
  .nav-link:hover {
    color: #0077cc;
  }
  
  .nav-link:hover::after {
    content: '';
    position: absolute;
    bottom: -5px;
    left: 0;
    width: 100%;
    height: 2px;
    background-color: #0077cc;
  }
  
  @media (max-width: 768px) {
    .nav-list {
      gap: 1rem;
    }
  }
</style> 