---
import BaseLayout from "@layouts/BaseLayout.astro";
import Hero from "@components/sections/Hero.astro";
import About from "@components/sections/About.astro";
import Experience from "@components/sections/Experience.astro";
import Projects from "@components/sections/Projects.astro";

const title = "Brandon Corpas";
const description =
  "Soy un desarrollador web Full-Stack e ingeniero de sistemas en formación, especializado en crear experiencias web modernas, accesibles y escalables con tecnologías de vanguardia, siempre centradas en el usuario.";
---

<BaseLayout title={title} description={description}>
  <main class="main-section min-h-screen bg-dark">

    <!-- Mobile Layout -->
    <div class="lg:hidden">
      <div class="min-h-screen flex flex-col">
        <!-- Hero Section for Mobile -->
        <section class="flex-1 flex items-center justify-center py-12 pt-4">
          <Hero />
        </section>
        
        <!-- About Section for Mobile -->
        <section class="flex-1 flex items-center justify-center py-8 bg-gradient-to-b from-dark to-dark/95">
          <About />
        </section>

        <!-- Experience Section for Mobile -->
        <section class="flex-1 flex items-center justify-center py-8 bg-gradient-to-b from-dark/95 to-dark/90">
          <Experience />
        </section>

        <!-- Projects Section for Mobile -->
        <section class="flex-1 flex items-center justify-center py-8 bg-gradient-to-b from-dark/90 to-dark/85">
          <Projects />
        </section>
      </div>
    </div>

    <!-- Desktop Layout -->
    <div class="hero-desktop hidden lg:flex min-h-screen">
      
      <!-- Left Side - Hero (Fixed) -->
      <aside class="fixed top-16 w-1/2 max-w-[35%] h-screen bg-dark block pr-0 pl-0 flex items-center justify-center px-8 xl:px-0">
        <Hero />
      </aside>

      <!-- Right Side - Scrollable Content -->
      <main class="ml-auto w-1/2 min-h-screen">
        <div class="space-y-16 py-16 pr-8 xl:pr-12">
          
          <!-- About Section -->
          <section id="sobre-mi" class="min-h-screen flex items-center justify-center">
            <About />
          </section>
          
          <!-- Experience Section -->
          <section id="experiencia" class="min-h-screen flex items-center justify-center">
            <Experience />
          </section>

          <!-- Projects Section -->
          <section id="proyectos" class="min-h-screen flex items-center justify-center">
            <Projects />
          </section>
        </div>
      </main>
      
    </div>

  </main>
</BaseLayout>

<style>
  .main-section {
    background: linear-gradient(
      135deg,
      var(--color-dark) 0%,
      rgba(15, 23, 42, 0.95) 100%
    );
  }

  @media (min-width: 1024px) {
    .main-section {
      background: var(--color-dark);
    }

    aside {
      background: linear-gradient(
        135deg,
        var(--color-dark) 0%,
        rgba(15, 23, 42, 0.95) 100%
      );
      height: calc(100vh - 4rem);
    }
  }
</style>
