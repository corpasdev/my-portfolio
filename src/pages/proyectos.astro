---
import Layout from '../layouts/Layout.astro';
import Section from '../components/common/Section.astro';
import Card from '../components/ui/Card.astro';
import CardGrid from '../components/common/CardGrid.astro';

const projects = [
  {
    title: 'Sitio web corporativo',
    description: 'Diseño y desarrollo de un sitio web corporativo con Astro y TailwindCSS.',
    image: 'https://via.placeholder.com/800x600/eef/fff?text=Proyecto+1',
    href: '/proyectos/proyecto-1'
  },
  {
    title: 'Aplicación web',
    description: 'Desarrollo de una aplicación web con React y Node.js para gestión de inventario.',
    image: 'https://via.placeholder.com/800x600/fee/fff?text=Proyecto+2',
    href: '/proyectos/proyecto-2'
  },
  {
    title: 'E-commerce',
    description: 'Tienda en línea desarrollada con tecnologías modernas y experiencia de usuario optimizada.',
    image: 'https://via.placeholder.com/800x600/efe/fff?text=Proyecto+3',
    href: '/proyectos/proyecto-3'
  },
  {
    title: 'Dashboard administrativo',
    description: 'Panel de administración para gestión de datos con visualizaciones interactivas.',
    image: 'https://via.placeholder.com/800x600/fef/fff?text=Proyecto+4',
    href: '/proyectos/proyecto-4'
  }
];
---

<Layout title="Proyectos | Brandon Corpas" description="Proyectos de desarrollo web de Brandon Corpas">
  <Section id="projects-hero" className="page-header">
    <h1>Mis Proyectos</h1>
    <p>Una selección de los proyectos en los que he trabajado recientemente.</p>
  </Section>
  
  <Section id="featured-projects">
    <CardGrid>
      {projects.map(project => (
        <Card 
          title={project.title}
          image={project.image}
          href={project.href}
        >
          <p>{project.description}</p>
        </Card>
      ))}
    </CardGrid>
  </Section>
</Layout>

<style>
  .page-header {
    text-align: center;
    margin-bottom: 2rem;
  }
  
  .page-header h1 {
    margin-bottom: 1rem;
  }
  
  .page-header p {
    color: var(--color-text-light);
    max-width: 800px;
    margin: 0 auto;
  }
</style> 